#include <stdio.h>
#include <stdlib.h>
#include <math.h>

//função principal
int main(){
  int matrizquadrado[3][3];
  int matriztriangulo[3][3];
  int matrizcirculo[3][3];
  int matriz[3][3];
  int i,j,c,t,q;
  
  //criar quadrado base
  
    //preencher matriz do quadrado
    for(i=0;i<3;i++){
        for(j=0;j<3;j++){
          matrizquadrado[0][j]=1;
          matrizquadrado[2][j]=1;
          matrizquadrado[i][0]=1;
          matrizquadrado[i][2]=1;
          matrizquadrado[1][1]=0;
          
        }     
    }
    //printar matriz (não necessário)
   for(i=0;i<3;i++){
     printf("(");
        for(j=0;j<3;j++){
            printf(" %d ", matrizquadrado[i][j]);
        }
      printf(")\n");
    }
    
    //criar Triangulo base
    printf("\n"); 
    for(i=0;i<3;i++){
      for(j=0;j<3;j++){
        matriztriangulo[2][j]=1;
        matriztriangulo[0][1]=1;
                  
        if(matriztriangulo[i][j]!= matriztriangulo[2][j]&& matriztriangulo[0][1]){
          matriztriangulo[i][j]=0;
        }
                  
      }
    }
    //printar matriz (não necessário)
    for(i=0;i<3;i++){
     printf("(");
        for(j=0;j<3;j++){
            printf(" %d ", matriztriangulo[i][j]);
        }
      printf(")\n");
    }
    
    //comparar matrizes


    printf ("\nDigite valor para os elementos da matriz\n\n");
 
   for ( i=0; i<3; i++ )
     for ( j=0; j<3; j++ ){
           printf ("\nElemento[%d][%d] = ", i, j);
           scanf ("%d", &matriz[i][j]);
           if (matriz[i][j] == matrizquadrado[i][j])
           {
             q=q+1;
             if (matriz[i][j] == matriztriangulo[i][j])
             {
               t=t+1;
               if (matriz[i][j] == matrizcirculo[i][j])
               {
                 c=c+1;
                }
             else
             {
               if (matriz[i][j] == matrizcirculo[i][j])
               {
                 c=c+1;
                }
           else
           {
             if (matriz[i][j] == matriztriangulo[i][j])
              {
               t=t+1;
               if (matriz[i][j] == matrizcirculo[i][j])
               {
                 c=c+1;
             }
             else
             {
               if (matriz[i][j] == matrizcirculo[i][j])
               {
                 c=c+1;
                }
            if (q>t&&c){
                printf ("\nVocê inseriu um quadrado");
            }
            else{
                if (t>q&&c){
                    printf ("\nVocê inseriu um triângulo");
                }
           else{
             if (c>q&&t){
               printf ("\nVocê inseriu um círculo");
            }
       }
    }
}
